@startuml
'=================================================
' DWH vs DATA LAKE - Pipeline flow
' Sources -> ETL -> Storage (DWH / Lake) -> Consumers
'=================================================

!include ../_template_styles.puml

top to bottom direction

rectangle "SOURCES" <<Primary>> {
    database "**DB / Ops**\n<size:10>Transactional</size>" as S1 <<Primary>>
    database "**Files / Logs**\n<size:10>Raw</size>" as S2 <<Primary>>
    S1 -[hidden]right- S2
}

component "**ETL / ELT**\n<size:10>Extract, transform, load</size>" as ETL <<Task>>

rectangle "STORAGE" <<Primary>> {
    database "**Data Warehouse**\n<size:10>Schema-on-write, star schema</size>" as DWH <<Control>>
    database "**Data Lake**\n<size:10>Schema-on-read, Parquet</size>" as LAKE <<Task>>
    DWH -[hidden]right- LAKE
}

rectangle "CONSUMERS" <<Primary>> {
    component "**BI / Reports**\n<size:10>Governed queries</size>" as BI <<Control>>
    component "**ML / Ad-hoc**\n<size:10>Exploration</size>" as ML <<Task>>
    BI -[hidden]right- ML
}

S1 -down-> ETL
S2 -down-> ETL
ETL -down-> DWH : <size:10>curated</size>
ETL -down-> LAKE : <size:10>raw + processed</size>
DWH -down-> BI
LAKE -down-> ML

@enduml
