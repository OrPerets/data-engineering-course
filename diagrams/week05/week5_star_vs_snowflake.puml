@startuml
'=================================================
' STAR vs SNOWFLAKE - Schema structure only
' Left: fact + 3 flat dims; Right: fact + dim -> dim
'=================================================

left to right direction
skinparam linetype ortho
skinparam shadowing false
skinparam roundcorner 8
skinparam handwritten false
skinparam nodesep 40
skinparam ranksep 45

skinparam defaultFontName "Segoe UI, Helvetica, sans-serif"
skinparam defaultFontSize 16
skinparam defaultFontColor #2C3E50

skinparam rectangle {
    BackgroundColor #F8F9FA
    BorderColor #90A4AE
    BorderThickness 2
    FontSize 12
    Padding 10
}
skinparam database {
    BackgroundColor #ECEFF1
    BorderColor #546E7A
    BorderThickness 1.5
    FontSize 13
}
skinparam arrow {
    Color #607D8B
    Thickness 2.5
    FontSize 10
}

database "**sales_fact**" as F1 #FFF3E0
database "**dim_customer**" as DC #E8F5E9
database "**dim_product**" as DP #E8F5E9
database "**dim_date**" as DD #E8F5E9
F1 -up-> DC : <size:9>FK</size>
F1 -up-> DP : <size:9>FK</size>
F1 -up-> DD : <size:9>FK</size>
DC -[hidden]right- DP
DP -[hidden]right- DD

database "**sales_fact**" as F2 #FFF3E0
database "**dim_product**" as D2P #E3F2FD
database "**dim_brand**" as DB #E3F2FD
database "**dim_category**" as D2C #E3F2FD
F2 -up-> D2P : <size:9>FK</size>
D2P -up-> DB : <size:9>FK</size>
DB -up-> D2C : <size:9>FK</size>

F1 -[hidden]right- F2

@enduml
