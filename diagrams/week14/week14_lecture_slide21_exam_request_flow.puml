@startuml
'=================================================
' CANONICAL DIAGRAM TEMPLATE — DATA ENGINEERING
'=================================================

top to bottom direction
skinparam linetype ortho
skinparam shadowing false
skinparam roundcorner 8
skinparam handwritten false
skinparam nodesep 30
skinparam ranksep 40

skinparam defaultFontName "Segoe UI", "Helvetica", sans-serif
skinparam defaultFontSize 16
skinparam defaultFontColor #2C3E50

skinparam rectangle { BackgroundColor #F8F9FA; BorderColor #90A4AE; BorderThickness 2; FontColor #263238; FontSize 14; FontStyle bold; Padding 20 }
skinparam component { BackgroundColor #FFFFFF; BorderColor #78909C; BorderThickness 1.5; FontSize 14; Padding 12 }
skinparam database { BackgroundColor #ECEFF1; BorderColor #546E7A; BorderThickness 1.5; FontSize 14; FontColor #263238 }
skinparam arrow { Color #607D8B; Thickness 1.5; FontSize 11; FontColor #546E7A }
skinparam component<<Agent>> { BorderColor #0288D1; BackgroundColor #E1F5FE; FontColor #01579B }
skinparam component<<Tool>> { BorderColor #2E7D32; BackgroundColor #E8F5E9; FontColor #1B5E20 }

'========================
' EXAM: QUESTION → TOPIC → CONCEPTS → SOLUTION PATH
'========================

rectangle "EXAM QUESTION" #F8F9FA {
    component "**Question**\n<size:10>e.g. incremental load, word count, revenue by region</size>" as Q <<Agent>>
}

rectangle "TOPIC" #F8F9FA {
    component "**Identify topic**\n<size:10>ETL / MapReduce / DWH / Streaming</size>" as TOPIC <<Tool>>
}

rectangle "CONCEPTS" #F8F9FA {
    component "**Concepts**\n<size:10>Watermark, MERGE, map/shuffle/reduce, star, partition pruning</size>" as CONCEPTS <<Tool>>
}

rectangle "SOLUTION PATH" #F8F9FA {
    component "**Plan**\n<size:10>Schema, keys, steps, idempotency, cost</size>" as PLAN <<Tool>>
}

database "**Answer**\n<size:10>SQL / pseudocode / trace</size>" as ANSWER

Q --> TOPIC : "1"
TOPIC --> CONCEPTS : "2"
CONCEPTS --> PLAN : "3"
PLAN --> ANSWER : "4"

note right of TOPIC : **SQL/ETL:** MERGE, dedup, watermark
note right of CONCEPTS : **MapReduce:** (k,v), shuffle, skew
note right of PLAN : **DWH:** star, pruning, join size

@enduml
