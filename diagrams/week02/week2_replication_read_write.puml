@startuml
!include ../_template_styles.puml
' REPLICATION: READ / WRITE PATHS
left to right direction

component "**Client**" as CLIENT <<Primary>>

database "**Primary**\n<size:11>write first</size>" as PRIMARY <<up>>
database "**Replica 2**\n<size:11>async sync</size>" as R2 <<up>>
database "**Replica 3**\n<size:11>async sync</size>" as R3 <<up>>

CLIENT -right[#FF6F00,thickness=2]-> PRIMARY : <color:#3949AB>write</color>
PRIMARY -right[#5C6BC0,thickness=2]-> R2 : <color:#3949AB>replicate</color>
PRIMARY -right[#5C6BC0,thickness=2]-> R3 : <color:#3949AB>replicate</color>

CLIENT -down[#00897B,thickness=2]-> PRIMARY : <color:#3949AB>read any</color>
CLIENT -down[#00897B,thickness=2]-> R2
CLIENT -down[#00897B,thickness=2]-> R3

@enduml
